<?xml version="1.0" encoding="utf-8"?>
<map:LocaleMap enableLog="true"
			   xmlns="com.asfusion.mate.l10n.injectors.*"
			   xmlns:map="com.asfusion.mate.l10n.maps.*"
			   xmlns:fx="http://ns.adobe.com/mxml/2009">
	
			<fx:Metadata>
				[ResourceBundle("commons")]
			</fx:Metadata>
			
			<fx:Script>
				<![CDATA[
					import mx.controls.DataGrid;
				]]>
			</fx:Script>
	
	<fx:Declarations>
		
		<SmartResourceInjector bundleName="commons" target="{I18nTest}" >			
			<ResourceProxy property="introList.getItemAt(0).label" 		key="introList.basic" />
			<ResourceProxy property="introList.getItemAt(1).label" 		key="introList.rules" />
			
			<ResourceProxy property="txtTitle.text"  					key="title.normal" state="normal" />
			<ResourceProxy property="txtTitle.text"  					key="title.small"  state="small"  />

			<ResourceProxy property="introView.label" 					key="introView.title" />
			<ResourceProxy property="instView.label" 					key="instView.title" />
			
			<!-- Disabled due to runtime exception in Accordian.as 2475
				<ResourceProxy target="{ui.introSparkView}" property="label" key="introSparkView.title" />
				<ResourceProxy target="{ui.instSparkView}"  property="label" key="instSparkView.title" />
			-->
		</SmartResourceInjector>
		
		<SmartResourceInjector target="{DataGrid}" bundleName="commons">
			<ResourceProxy targetID="grdAccounts" 	 property="columns[0].headerText" key="title.normal" />
			<ResourceProxy targetID="grdDepartments" property="columns[1].headerText" key="introView.title" />
			
		</SmartResourceInjector>
		
	</fx:Declarations>
	
</map:LocaleMap>
